<div class="container mt-5 d-flex justify-content-center">
  <div class="column">
    <div class="col-12 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1> What would you like change about: <%= @dog.name %> </h1>
        <%= simple_form_for @dog do |f| %>
          <%= f.input :name %>
          <%= f.input :breed %>
          <%= f.input :photo, as: :file, direct_upload: true %>
          <%= f.input :skills %>
          <%= f.submit class: 'btn btn-outline-success' %>
          <%= link_to 'Back',mydogs_url, class: 'btn btn-outline-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
