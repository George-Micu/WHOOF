<div class="container py-3">
  <div class = "cards">
      <div class="card">
        <div class="card-img">
          <%#= @dog.image_url , class: "card-product img" %>
        </div>
        <div class = "card-body">
          <strong class="card-title"><%#= dog.name %><%#= dog.skills %></strong>
          <p class="card-text"><%#= dog.name %></p>
          <strong>About this Dog </strong>
          <div class="card-text">
            <p class="card-text">name:<%=@dog.name%></p>
            <p class="card-text">breed:<%=@dog.breed%></p>
            <p class="card-text">price:<%=@dog.price%></p>
            <p class="card-text">despription:<%=@dog.description%></p>
          </div>
          <%= link_to 'Add a booking',new_dog_booking_path(@dog), class: 'btn btn-outline-success' %>
        </div>
      </div>
  </div>
</div>
