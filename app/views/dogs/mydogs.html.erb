<%= render 'shared/banner'%>
<div class = "p-4 d-flex justify-content-end">
    <%= link_to 'Add a new dog',new_dog_path, class: 'btn btn-outline-success' %>
</div>
<div class = 'container py-3'>
  <div class="row row-cols-3 row-cols-md-2 g-4">
    <div class="cards">
      <%@dogs.each do |dog|  %>
        <div class = "col">
          <div class="card">
            <%= link_to mydog_path(dog) do %>
              <img src= <%= dog.image_url %> >
              <div class = "d-flex">
                <p class="card-text">Name:<%=dog.name%></p>
                <p class="card-text">Breed:<%=dog.breed%></p>
                <p class="card-text">Price:$<%=dog.price%></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
