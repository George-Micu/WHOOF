<div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cdc.gov/healthypets/images/pets/cute-dog-headshot.jpg?_=42445);">
  <div class="col-lg-12 text-center">
    <h1 class="d-flex justify-content-center">Welcome to WHOOF your one-stop shop for cuddly vibes</h1>
      <div class="d-flex justify-content-center mt-5">
         <%= link_to "See All",dogs_url, class: "btn btn-success"%>
      </div>
  </div>
</div>
<div class = 'container pt-2'>
    <div class="d-flex justify-content-center p-3">
      <h2 clas>The most popular dogs this week</h2>
    </div>
  <div class="card border-0">
      <div class="row">
        <% @dogs[0,3].each do |dog|  %>
          <div class="col-sm-1 col-md-6 col-lg-4 ">
            <div class="card">
            <% if dog.photo.present? %>
              <%= cl_image_tag dog.photo.key, height: 150, width: 100, crop: :fit %>
              <div class="card-body">
                <p class="card-text">Breed: <%= dog.breed %></p>
                <p class="card-text">Location: <%= dog.user.address %></p>
                <p class="card-text">Price: $<%= dog.price %></p>
                <%if user_signed_in? %>
                  <div class="d-flex justify-content-center">
                <%= link_to 'BOOK NOW',new_dog_booking_path(dog), class: 'btn btn-outline-success' %>
             </div>
            <% end %>
              </div>
            <%else%>
               <div class="card-body">
                <p class="card-text">Breed: <%= dog.breed %></p>
                <p class="card-text">Location: <%= dog.user.address %></p>
                <p class="card-text">Price: $<%= dog.price %></p>
                <%if user_signed_in? %>
                  <div class="d-flex justify-content-center">
                <%= link_to 'BOOK NOW',new_dog_booking_path(dog), class: 'btn btn-outline-success' %>
             </div>
            <% end %>
              </div>
            <%end%>
        </div>
      </div>
    <% end %>
      </div>
  </div>
</div>
