<div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cdc.gov/healthypets/images/pets/cute-dog-headshot.jpg?_=42445);">
  <div class="container">
    <h1 class = "text-center">Welcome to WHOOF your one-stop shop for cuddly vibes</h1>
    <%= link_to "See All",dogs_url, class: "btn btn-success"%>
  </div>
</div>
<div class = 'container py-5'>
  <div class="cards">
    <% @dogs.each do |dog|  %>
      <div class="row row-cols-3 row-cols-md-2 g-4">
        <div class="col">
          <div class="card">
            <img src="https://www.cdc.gov/healthypets/images/pets/cute-dog-headshot.jpg?_=42445" alt="Girl in a jacket" class="card-img-top">
            <div class="card-body">
              <p class="card-text">price:<%= dog.price %></p>
              <p class="card-text">breed:<%= dog.breed %></p>
            </div>
          </div>
            <%if user_signed_in? %>
              <%= link_to 'ADD',new_dog_booking_path(:dog_id), class: 'btn btn-outline-success' %>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
